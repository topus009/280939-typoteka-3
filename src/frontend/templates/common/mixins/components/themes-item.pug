mixin themesItem(theme, categoriesCount, isActive = false)
  - count = categoriesCount[theme.id]
  if count
    li.themes__item
      a.themes__item-link(href=`/category/${theme.id}` class=`${isActive && 'themes__item-link--active'}`)
        span= `${theme.label}`
        sup= ` ${count}`
